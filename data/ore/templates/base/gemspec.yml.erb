name: <%= @name %>
summary: <%= yaml_escape @summary %>
description: <%= yaml_escape @description %>
<%- if @license -%>
license: <%= @license %>
<%- end -%>
<%- if @authors.length > 1 -%>
authors:
<%-   @authors.each do |name| -%>
 - <%= name %>
<%-   end -%>
<%- else -%>
authors: <%= @authors.first %>
<%- end -%>
<%- if @email -%>
email: <%= @email %>
<%- end -%>
homepage: <%= @homepage %>
<%= includes :gemspec, '' -%>

<%- includes(:dependencies,'') do |dependencies| -%>
dependencies:
<%=   dependencies %>

<%- end -%>
development_dependencies:
<%= includes :development_dependencies, '' -%>
